<link rel="stylesheet" href="/stylesheets/bracketstyle.css">
<div class="container-fluid main-div">
<header class="hero">
    <div class="hero-wrap">
     <p class="intro" id="intro">Bracketeers</p>
         <h1 id="headline">Tournament</h1>
         <p class="year"><i class="fa fa-star"></i> 2020 <i class="fa fa-star"></i></p>
     <p>Ballin' Outta Control</p>
   </div>
    </header>
    <section id="bracket">
    <button id="startBtn">START</button>
    <button id="playBtn">PLAY</button>
    <div class="container" id="firstcontainer">
    <div class="split split-one">
        <div class="round round-one current">
            <div class="round-details">Round 1<br/><span class="date"></span></div>
            <ul class="matchup">
                <li class="team team-top" id="first"><span class="country"></span><span class="score"></span></li>
                <li class="team team-bottom" id="second"><span class="country"></span><span class="score"></span></li>
            </ul>
            <ul class="matchup">
                <li class="team team-top" id="third"><span class="country"></span><span class="score"></span></li>
                <li class="team team-bottom" id="fourth"><span class="country"></span><span class="score"></span></li>
            </ul>
            <ul class="matchup">
                <li class="team team-top" id="fifth"><span class="country"></span><span class="score"></span></li>
                <li class="team team-bottom" id="sixth"><span class="country"></span><span class="score"></span></li>
            </ul>
            <ul class="matchup">
                <li class="team team-top" id="seventh"><span class="country"></span><span class="score"></span></li>
                <li class="team team-bottom" id="eighth"><span class="country"></span><span class="score"></span></li>
            </ul>           
            <button id="firstround">ROUND 1</button>              
        </div>  <!-- END ROUND ONE -->

        <div class="round round-two">
            <div class="round-details">Round 2<br/><span class="date"></span></div>         
            <ul class="matchup">
                <li class="team team-top" id="frw1">&nbsp;<span class="score">&nbsp;</span></li>
                <li class="team team-bottom" id="frw2">&nbsp;<span class="score">&nbsp;</span></li>
            </ul>   
            <ul class="matchup">
                <li class="team team-top" id="frw3">&nbsp;<span class="score">&nbsp;</span></li>
                <li class="team team-bottom" id="frw4">&nbsp;<span class="score">&nbsp;</span></li>
            </ul>   
            <button id="firstround">ROUND 2</button>                         
        </div>  <!-- END ROUND TWO -->
        
        <div class="round round-three">
            <div class="round-details">Round 3<br/><span class="date"></span></div>         
            <ul class="matchup">
                <li class="team team-top" id="srw1">&nbsp;<span class="score">&nbsp;</span></li>
                <li class="team team-bottom" id="srw2">&nbsp;<span class="score">&nbsp;</span></li>
            </ul>   
            <button id="firstround">ROUND 3</button>                         
        </div>  <!-- END ROUND THREE -->        
    </div> 

<div class="champion">
        <div class="final">
            <div class="round-details">championship <br/><span class="date"></span></div>      
            <ul class ="matchup championship">
                <li class="team team-top">&nbsp;<span class="vote-count">&nbsp;</span></li>
            </ul>
        </div>
        <div class="final">
            <i class="fa fa-trophy"></i>
            <ul class ="matchup championship">
                <li class="team team-top">&nbsp;<span class="vote-count">&nbsp;</span></li>
            </ul>
        </div>
        <button id="firstround">FINAL</button> 
    </div>


    <div class="split split-two">


        <div class="round round-three">
            <div class="round-details">Round 3<br/><span class="date"></span></div>                     
            <ul class="matchup">
                <li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
                <li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
            </ul>   
            <button id="firstround">ROUND 3</button>                        
        </div>  <!-- END ROUND THREE -->    

        <div class="round round-two">
            <div class="round-details">Round 2<br/><span class="date"></span></div>                     
            <ul class="matchup">
                <li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
                <li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
            </ul>   
            <ul class="matchup">
                <li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
                <li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
            </ul>   
            <button id="firstround">ROUND 2</button> 
                                    
        </div>  <!-- END ROUND TWO -->
        <div class="round round-one current">
            <div class="round-details">Round 1<br/><span class="date"></span></div>
            <ul class="matchup">
                <li class="team team-top"><span class="score">62</span></li>
                <li class="team team-bottom"><span class="score">54</span></li>
            </ul>
            <ul class="matchup">
                <li class="team team-top"><span class="score">68</span></li>
